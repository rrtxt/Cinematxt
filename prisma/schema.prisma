generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model movie {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  release_date DateTime
  poster_url   String
  age_rating   Int
  ticket_price Int
  order        order[]
}

model order {
  id         Int      @id @default(autoincrement())
  order_Date DateTime
  userId     Int?
  movieId    Int?
  movie      movie?   @relation(fields: [movieId], references: [id], map: "Order_movieId_fkey")
  user       user?    @relation(fields: [userId], references: [id], map: "Order_userId_fkey")

  @@index([movieId], map: "Order_movieId_fkey")
  @@index([userId], map: "Order_userId_fkey")
}

model user {
  id       Int     @id @default(autoincrement())
  email    String  @unique(map: "User_email_key")
  username String  @unique
  password String
  age      Int
  balance  Int?    @default(0)
  order    order[]
}
